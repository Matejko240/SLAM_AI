<?xml version="1.0"?>
<robot name="diffbot">
  <!-- 
  TF tree: odom -> base_link -> laser_link
  odom -> base_link is published by odom_corruptor
  base_link -> laser_link is published by robot_state_publisher
  -->
  
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.30 0.20 0.10"/>
      </geometry>
    </visual>
  </link>

  <link name="base_inertia">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.08" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <joint name="base_inertia_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_inertia"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="laser_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>
  </link>

  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <origin xyz="0.0 0.0 0.15" rpy="0 0 0"/>
  </joint>
</robot>
